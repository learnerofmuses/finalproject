<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myapplication.rulesMain2Activity">

    <TextView
        android:id="@+id/rulesdoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="1. OBJECTIVE: Turn all the buttons green"
        android:textSize="20dp"
        android:layout_below="@+id/rulesdoe"/>
    <TextView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="2.Colors are randomized. When you click a button, the color changes along with the colors around it"
        android:textSize="20dp"
        android:layout_below="@+id/step1"/>
    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="3. To start over press rules button, back button, then start over button"
        android:textSize="20dp"
        android:layout_below="@+id/step2"/>
    <TextView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="HINT: Colors are set to previous order once clicked on."
        android:textSize="20dp"
        android:layout_below="@+id/step3"/>
    <TextView
        android:id="@+id/step5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Best Score: 1 Attempt"
        android:textSize="20dp"
        android:layout_below="@+id/step4"/>
    <TextView
        android:id="@+id/step6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Average Score: 4 Attempts"
        android:textSize="20dp"
        android:layout_below="@+id/step5"/>

</RelativeLayout>
